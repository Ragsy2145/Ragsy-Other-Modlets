<Brighter_Headlights>
	
		<!-- Tested by bdubyah in XML and now transferred to modlet form  Values 0-10 Setting <property name="bright" value="*"/>
		it adds to end of vehicle but overides the default until a neater 'set version' can be done enjoy !! -->
	
		<append xpath="/vehicles/vehicle[@name='vehicleMotorcycle']">
		<property class="headlight">
			<property name="class" value="Headlight"/>
			<property name="parent_part" value="handlebars"/>
			<property name="transform" value="Origin/handlebar_joint/headlight"/> -->
			<property name="bright" value="10"/>
		</property>
		</append>
		
		<append xpath="/vehicles/vehicle[@name='vehicleMinibike']">
		<property class="headlight">
		 	<property name="class" value="Headlight"/>
			<property name="parent_part" value="handlebars"/>
			<property name="transform" value="Origin/handlebar_joint/headlight"/> -->
			<property name="bright" value="10"/>
		</property>
		</append>
		
		<append xpath="/vehicles/vehicle[@name='vehicle4x4Truck']">
		 <property class="headlight">
			<property name="class" value="Headlight"/>
			<property name="parent_part" value="chassis"/>
			<property name="transform" value="Origin/headlight"/> -->
			<property name="bright" value="10"/>
		</property>
		</append>
				
